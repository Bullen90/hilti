module Main

import Hilti

void run() {
    local interval i
    local time t
    local string s

    t = time(1295415110)
    i = interval(3600)

    call Hilti::print (t)
    call Hilti::print (i)

    t = time.add t i

    call Hilti::print (t)

    t = time(1295415110.000000001)
    s = call Hilti::fmt("d: %f", (t))
    call Hilti::print (s)

    t = time(1295415110.999999999)
    i = interval(0.000000002)
    t = time.add t i
    s = call Hilti::fmt("d: %f", (t))
    call Hilti::print (s)
}

