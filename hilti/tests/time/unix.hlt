module Main

import Hilti

void printTime(time t) {
    local string s
    s = call Hilti::fmt("%s | %d | %f", (t, t, t))
    call Hilti::print(s)
}

void run() {
    local double d
    local int<64> i
    local int<64> nsecs
    local time t

    d = 1295415110.5
    i = 1295759890

    t = double.as_time d
    call printTime(t)

    t = int.as_time i
    call printTime(t)

    call Hilti::print("")

    t = time(1295415110.5)
    d = time.as_double t
    call Hilti::print(d)

    i = time.as_int t
    call Hilti::print(i)

    nsecs = time.nsecs t
    call Hilti::print(nsecs)
    }

