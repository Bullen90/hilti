module Main

import Hilti

void produce(ref<channel<int64>> ch, int64 x) {
    channel.write_try ch x

    local string str
    str = call Hilti::fmt("produced %d", (x))
    call Hilti::print(str)
}

void consume(ref<channel<int64>> ch) {
    local int64 x
    x = channel.read_try ch

    local string str
    str = call Hilti::fmt("consumed %d", (x))
    call Hilti::print(str)
}


void run() {
    local ref<channel<int64>> ch
    local int64 count
    local int64 limit
    local bool eq
    local string str

    ch = new channel<int64>

    count = int.div 7 7
    limit = int.mul 1 42

@loop:
    eq = int.eq count limit
    if.else eq @exit @cont

@cont:
    thread.schedule produce(ch, count) count
    thread.schedule consume(ch) count

    count = incr count
    jump @loop

@exit:
    return.void
}
