# A series of integer operations, with load and stores in between.

module Main

import Hilti

void print_bool(bool b) {
     if.else b @one @zero
     
@one: 
     call Hilti::print(1)
     return.void
     
@zero: 
     call Hilti::print(0)
     return.void
}


void run() {
    local int<32> i1
    local int<32> i2
    local int<32> i3
    local int<8>  i4
    local bool b
    
    i1 = int.add 10 20
    call Hilti::print (i1)

    i2 = int.sub i1 20
    call Hilti::print (i2)
    
    i3 = int.mul i1 i2
    call Hilti::print (i3)
    
    i3 = int.div i3 4
    call Hilti::print (i3)
    
    b = int.eq i3 i3
    call print_bool (b)
    
    b = int.eq i3 1
    call print_bool (b)
    
    b = int.slt i2 i3
    call print_bool (b)
    
    b = int.slt i3 i2
    call print_bool (b)
    
    b = int.slt i3 i3
    call print_bool (b)

    i3 = int.mul i1 1000
    call Hilti::print (i3)

    i3 = int.add i1 1
    call Hilti::print (i3)
    
    i4 = int.trunc i3
    i3 = int.zext i4 
    call Hilti::print (i3)
            
    return.void
}     

