# @TEST-EXEC:  ./a.out >output 2>&1
# @TEST-EXEC:  test-diff output

module Main

import Hilti

void run() {
    local iterator<bytes> begin
    local iterator<bytes> end
    local iterator<bytes> nbegin
    local int32 diff
    local string out
    local ref<bytes> b
    local tuple<port,iterator<bytes>> t
    local port p
    
    b = b"\x01\x02"
    
    begin = bytes.begin b
    end = bytes.end b

    ####
    
    t = unpack (begin,end) Hilti::Packed::PortTCP
    p = tuple.index t 0
    nbegin = tuple.index t 1
    diff = bytes.diff begin nbegin
    out = call Hilti::fmt ("port=%s diff=%d", (p, diff))
    call Hilti::print(out)
    
    ####
    
    t = unpack (begin,end) Hilti::Packed::PortUDP
    p = tuple.index t 0
    nbegin = tuple.index t 1
    diff = bytes.diff begin nbegin
    out = call Hilti::fmt ("port=%s diff=%d", (p, diff))
    call Hilti::print(out)
    
    ####
    
    t = unpack (begin,end) Hilti::Packed::PortTCPNetwork
    p = tuple.index t 0
    nbegin = tuple.index t 1
    diff = bytes.diff begin nbegin
    out = call Hilti::fmt ("port=%s diff=%d", (p, diff))
    call Hilti::print(out)
    
    ####
    
    t = unpack (begin,end) Hilti::Packed::PortUDPNetwork
    p = tuple.index t 0
    nbegin = tuple.index t 1
    diff = bytes.diff begin nbegin
    out = call Hilti::fmt ("port=%s diff=%d", (p, diff))
    call Hilti::print(out)
    
    }
