# @TEST-EXEC:  btest-diff output

module Main

import Hilti

void run() {
    local bool b
    local int32 s
    local ref<timer_mgr> t
    local ref<map<string, int32>> m

    t = new timer_mgr
    m = new map<string, int32> t
    map.timeout m Hilti::ExpireStrategy::Create 20.0

    map.insert m "A-0" 1
    map.insert m "B-0" 2

    timer_mgr.advance t 5.0
    map.insert m "C-5" 1
    map.insert m "D-5" 2

    # This shouldn't have any effect on the expiration.
    b = map.exists m "B-0"

    timer_mgr.advance t 10.0
    map.insert m "E-10" 1
    map.insert m "F-10" 2

    call Hilti::print(m)

    call Hilti::print("Advance to 10")
    timer_mgr.advance t 10.0
    call Hilti::print(m)

    call Hilti::print("Advance to 20")
    timer_mgr.advance t 20.0
    call Hilti::print(m)

    call Hilti::print("Advance to 25")
    timer_mgr.advance t 25.0
    call Hilti::print(m)

    call Hilti::print("Advance to 50")
    timer_mgr.advance t 50.0
    call Hilti::print(m)

    call Hilti::print(t)
}
