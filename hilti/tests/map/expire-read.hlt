module Main

import Hilti

void run() {
    local int32 s
    local bool b 
    local ref<timer_mgr> t
    local ref<map<string, int32>> m

    t = new timer_mgr
    m = new map<string, int32> t
    map.timeout m Hilti::ExpireStrategy::Access 20.0

    map.insert m "A-0" 1
    map.insert m "B-0" 2

    timer_mgr.advance t 5.0
    map.insert m "C-5" 1
    map.insert m "D-5" 2

    timer_mgr.advance t 10.0
    map.insert m "E-10" 1
    map.insert m "F-10" 2

    call Hilti::print(m)
    call Hilti::print(t)
    call Hilti::print("")

    timer_mgr.advance t 10.0
    call Hilti::print(m)
    call Hilti::print(t)
    call Hilti::print("")

    b = map.exists m "B-0"

    timer_mgr.advance t 20.0
    call Hilti::print(m)
    call Hilti::print(t)
    call Hilti::print("")

    timer_mgr.advance t 25.0
    call Hilti::print(m)
    call Hilti::print(t)
    call Hilti::print("")

    map.remove m "F-10"
    call Hilti::print(m)
    call Hilti::print(t)
    call Hilti::print("")

    timer_mgr.advance t 50.0
    call Hilti::print(m)
    call Hilti::print(t)
    call Hilti::print("")

}
