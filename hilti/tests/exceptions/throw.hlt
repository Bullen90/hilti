module Main

import Hilti

type myException = exception<string>
type myException2 = exception<string> : myException

void run() {

     call Hilti::print ("A")
     
     local ref<myException2> e
     e = new myException2 "hallo"
     exception.throw e
     
     call Hilti::print ("B")
}     


