module Main

import Hilti

void run() {
    local iterator<bytes> p1
    local iterator<bytes> p2
    local ref<bytes> b

    local tuple<bool, iterator<bytes>> t
    local bool boo

    b = b"\x02"
    p1 = begin b
    p2 = end b

    t = unpack (p1,p2) Hilti::Packed::Bool
    boo = tuple.index t 0
    call Hilti::print (boo)

    b = b"\x00"
    p1 = begin b
    p2 = end b

    t = unpack (p1,p2) Hilti::Packed::Bool
    boo = tuple.index t 0
    call Hilti::print (boo)

    b = b"\x04"
    p1 = begin b
    p2 = end b

    t = unpack (p1,p2) Hilti::Packed::Bool 1
    boo = tuple.index t 0
    call Hilti::print (boo)

    t = unpack (p1,p2) Hilti::Packed::Bool 2
    boo = tuple.index t 0
    call Hilti::print (boo)
}
