module Main

import Hilti

void run() {

    local ref<file> f1
    
    f1 = new file
    
    file.open f1 "foo.log" (Hilti::FileType::Text, Hilti::FileMode::Create, "utf8")
    file.write f1 b"\x01\x02\x03\x04"
    file.close f1
    
    local ref<file> f2
    
    f2 = new file
    
    file.open f2 "foo.log" (Hilti::FileType::Binary, Hilti::FileMode::Create, "utf8")
    file.write f2 b"\x01\x02\x03\x04"
    file.close f2
    
    return.void
}     

