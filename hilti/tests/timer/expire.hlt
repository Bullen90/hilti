module Main

import Hilti

void foo(double n) {
    call Hilti::print ("Timer fires at ", False)
    call Hilti::print (n)
}

void create(ref<timer_mgr> mgr, double t) {
    local ref<timer> tim
    tim = new timer foo (t)
    timer_mgr.schedule mgr t tim

    call Hilti::print (tim)
}

void run() {

    local ref<timer_mgr> mgr

    mgr = new timer_mgr
    call create(mgr, 1.0)
    call create(mgr, 5.0)
    call create(mgr, 2.0)
    call create(mgr, 3.0)
    call create(mgr, 4.0)

    timer_mgr.expire mgr False

    call create(mgr, 1.5)
    call create(mgr, 5.5)
    call create(mgr, 2.5)
    call create(mgr, 3.5)
    call create(mgr, 4.5)

    timer_mgr.expire mgr True

    return.void
}


