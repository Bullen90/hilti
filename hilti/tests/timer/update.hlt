module Main

import Hilti

void foo(int32 n) {
    call Hilti::print ("Timer at ", False)
    call Hilti::print (n)
}

void advance(ref<timer_mgr> mgr, double t) {
    call Hilti::print ("Advance to ", False)
    call Hilti::print (t)
    timer_mgr.advance mgr t
}

void run() {

    local ref<timer> t
    local ref<timer_mgr> mgr

    mgr = new timer_mgr
    t = new timer foo (4)
    timer_mgr.schedule mgr 4.0 t
    t = new timer foo (1)
    timer_mgr.schedule mgr 1.0 t
    t = new timer foo (5)
    timer_mgr.schedule mgr 5.0 t
    t = new timer foo (2)
    timer_mgr.schedule mgr 2.0 t
    t = new timer foo (3)
    timer_mgr.schedule mgr 3.0 t

    timer.update t 10.0

    call advance(mgr, 0.1)
    call advance(mgr, 0.2)
    call advance(mgr, 0.3)
    call advance(mgr, 0.5)
    call advance(mgr, 1.0)
    call advance(mgr, 4.5)
    call advance(mgr, 5.0)
    call advance(mgr, 10.0)

    return.void
}


