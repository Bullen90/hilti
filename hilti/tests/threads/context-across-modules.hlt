module Main

import Hilti
import TestModule

context {
    addr orig_h,
    port orig_p,
    addr resp_h,
    port resp_p
}

scope Connection = { orig_h, orig_p, resp_h, resp_p }

void run() &scope=Connection {
    thread.set_context (192.160.0.1, 1234/tcp, 10.0.0.1, 80/tcp)
    thread.schedule Test::FuncPair()
    thread.set_context (192.160.0.1, 1234/tcp, 10.0.0.1, 85/tcp)
    thread.schedule Test::FuncPair()
    thread.set_context (192.160.0.1, 1234/tcp, 10.0.0.2, 80/tcp)
    thread.schedule Test::FuncPair()
}

@TEST-START-FILE testmodule.hlt

module Test

import Hilti

context {
    string Foo,
    addr orig_h,
    addr resp_h
}

scope Pair = { orig_h, resp_h }

void FuncPair() &scope=Pair {
    local ref<context> ctx
    local int<64> vid
    local string s

    local int<64> vid
    vid = thread.id
    ctx = thread.get_context

    s = call Hilti::fmt("FuncPair: vid %d ctx %s", (vid, ctx, ctx))
    call Hilti::print (s)
}

export FuncPair


@TEST-END-FILE
