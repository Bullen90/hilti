module Main

import Hilti

global int32 c = 2

void func_with_globals() {
    c = int.mul c 2
    call Hilti::print (c)
}

void run() {
    thread.schedule func_with_globals() 1
    thread.schedule func_with_globals() 2
    thread.schedule func_with_globals() 3
    thread.schedule func_with_globals() 4
    thread.schedule func_with_globals() 5
    thread.schedule func_with_globals() 1
    thread.schedule func_with_globals() 2
    thread.schedule func_with_globals() 3
    thread.schedule func_with_globals() 4
    thread.schedule func_with_globals() 5
    thread.schedule func_with_globals() 1
    thread.schedule func_with_globals() 2
    thread.schedule func_with_globals() 3
    thread.schedule func_with_globals() 4
    thread.schedule func_with_globals() 5
}

