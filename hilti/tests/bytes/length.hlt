module Main

import Hilti

void run() {
    local ref<bytes> b0
    local ref<bytes> b1
    local ref<bytes> b2
    local string s1
    local string s2
    local string s
    local int32 len
    local bool b

    s1 = "Hallo"
    s2 = "T\u00e4\u00e4\u00e4!"

    b0 = new bytes 
    len = bytes.length b0
    call Hilti::print (len)
    b = bytes.empty b0
    call Hilti::print (b)
    
    b1 = string.encode s1 "ascii"
    call Hilti::print (b1)
    len = bytes.length b1
    call Hilti::print (len)
    len = string.length s1
    call Hilti::print (len)
    b = bytes.empty b1
    call Hilti::print (b1)
    b = bytes.empty b1
    call Hilti::print (b)
    
    b2 = string.encode s2 "utf8"
    call Hilti::print (b2)
    len = bytes.length b2
    call Hilti::print (len)
    len = string.length s1
    call Hilti::print (len)
    b = bytes.empty b2
    call Hilti::print (b2)
    b = bytes.empty b1
    call Hilti::print (b)
    
}
