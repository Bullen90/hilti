module Main

import Hilti

void print_bytes(iterator<bytes> cur, iterator<bytes> last) {
    local ref<bytes> b
    b = bytes.sub cur last
    call Hilti::print (b)
}

void run() {
    local ref<bytes> b
    local iterator<bytes> i
    local iterator<bytes> j

    b = b"1234567890"
    i = begin b

    j = incr_by i 5
    call print_bytes (i, j)

    j = incr_by i 15
    call print_bytes (i, j)
 }
