module Main

import Hilti

void run() {
    local ref<bytes> b
    local bool eq
    local iterator<bytes> cur
    local iterator<bytes> last
    local int8 i

    b = string.encode "0123456789" "ascii"
    cur = begin b
    last = end b

@loop:
    eq = equal cur last
    if.else eq @exit @cont

@cont:
    i = deref cur
    cur = incr cur
    call Hilti::print (i)
    jump @loop

@exit: return.void
    }
