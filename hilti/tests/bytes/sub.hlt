module Main

import Hilti

void run() {
    local ref<bytes> b1
    local ref<bytes> b2
    local iterator<bytes> i1
    local iterator<bytes> i2
    local string s
    local int32 i

    b1 = string.encode "01234567890" "ascii"
    call Hilti::print (b1)
    
    i1 = bytes.offset b1 2 
    i2 = bytes.offset b1 6
    
    b2 = bytes.sub i1 i2
    call Hilti::print (b2)
    
    i1 = bytes.begin b1
    i2 = bytes.end b1
    b2 = bytes.sub i1 i2
    call Hilti::print (b2)
}
