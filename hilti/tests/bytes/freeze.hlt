module Main

import Hilti

void run() {
    local ref<bytes> b = b"abc"
    local bool frozen

    frozen = bytes.is_frozen b
    call Hilti::print (frozen)

    bytes.freeze b

    frozen = bytes.is_frozen b
    call Hilti::print (frozen)

    bytes.unfreeze b

    frozen = bytes.is_frozen b
    call Hilti::print (frozen)

    bytes.append b b"cde"

    frozen = bytes.is_frozen b
    call Hilti::print (frozen)

    bytes.freeze b

    frozen = bytes.is_frozen b
    call Hilti::print (frozen)

    bytes.unfreeze b

    frozen = bytes.is_frozen b
    call Hilti::print (frozen)
}
