# @TEST-EXEC:  hilti-build %INPUT -o a.out
# @TEST-EXEC:  ./a.out >output 2>&1
# @TEST-EXEC:  btest-diff output

module Main

import Hilti

void run() {
    local ref<bytes> b
    local ref<bytes> sub
    local tuple<ref<bytes>,iterator<bytes>> t
    local iterator<bytes> first
    local iterator<bytes> last
    local iterator<bytes> nfirst
    local int32 diff
    local string out

    b = b"\x00\x05\x00\x01\x02\x03\x04\x05\x06\x07\x08\x09\x0a\x0b\x0c\x0d\x0e\x0f"
    first = begin b
    last = end b

    t = unpack (first,last) Hilti::Packed::BytesFixed 5
    sub = tuple.index t 0
    nfirst = tuple.index t 1
    diff = bytes.diff first nfirst

    out = call Hilti::fmt ("sub=%s diff=%d", (sub, diff))
    call Hilti::print(out)

    ####

    t = unpack (first,last) Hilti::Packed::BytesFixed 0
    sub = tuple.index t 0
    nfirst = tuple.index t 1
    diff = bytes.diff first nfirst

    out = call Hilti::fmt ("sub=%s diff=%d", (sub, diff))
    call Hilti::print(out)

    ####

    t = unpack (first,last) Hilti::Packed::BytesRunLength Hilti::Packed::UInt16Big
    sub = tuple.index t 0
    nfirst = tuple.index t 1
    diff = bytes.diff first nfirst

    out = call Hilti::fmt ("sub=%s diff=%d", (sub, diff))
    call Hilti::print(out)

    ####

    t = unpack (first,last) Hilti::Packed::BytesRunLength Hilti::Packed::UInt8Big
    sub = tuple.index t 0
    nfirst = tuple.index t 1
    diff = bytes.diff first nfirst

    out = call Hilti::fmt ("sub=%s diff=%d", (sub, diff))
    call Hilti::print(out)

    ####

    t = unpack (first,last) Hilti::Packed::BytesDelim b"\x04"
    sub = tuple.index t 0
    nfirst = tuple.index t 1
    diff = bytes.diff first nfirst

    out = call Hilti::fmt ("sub=%s diff=%d", (sub, diff))
    call Hilti::print(out)

    ####

    t = unpack (first,last) Hilti::Packed::BytesDelim b"\xff"
    sub = tuple.index t 0
    nfirst = tuple.index t 1
    diff = bytes.diff first nfirst

    out = call Hilti::fmt ("sub=%s diff=%d", (sub, diff))
    call Hilti::print(out)

    ## Note multi-byte delimiters not supported yet.

    }
