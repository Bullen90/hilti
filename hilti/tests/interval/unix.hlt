module Main

import Hilti

void printInterval(interval t) {
    local string s
    s = call Hilti::fmt("%s | %d | %f", (t, t, t))
    call Hilti::print(s)
}

void run() {
    local int<64> i
    local double d
    local interval t
    local int<64> nsecs

    d = 1000.42
    i = 2000

    t = double.as_interval d
    call printInterval(t)

    t = int.as_interval i
    call printInterval(t)

    call Hilti::print("")

    t = interval(1000.42)
    d = interval.as_double t
    call Hilti::print(d)

    i = interval.as_int t
    call Hilti::print(i)

    nsecs = interval.nsecs t
    call Hilti::print(nsecs)

    }

