module Main

import Hilti

void run() {

    local ref<iosrc<Hilti::IOSrc::PcapLive>> psrc
    local tuple<double,ref<bytes>> pkt

    psrc = new iosrc<Hilti::IOSrc::PcapLive> "en0"
    
@loop:
    pkt = iosrc.read psrc
    call Hilti::print (pkt, True)
    jump @loop
    
    return.void
}     

