module Main

import Hilti

void run() {
    local ref<bytes> b
    local iterator<bytes> i1
    local iterator<bytes> i2
    local ref<regexp> re
    local int32 found
    local ref<list<string>> patterns

    re = new regexp
    call Hilti::print(re)

    patterns = new list<string>
    list.push_back patterns "Foo"
    list.push_back patterns "Bar"
    list.push_back patterns "Hurz"

    regexp.compile re patterns
    call Hilti::print(re)

    b = b"Hello Foo!"
    i1 = begin b
    i2 = end b
    found = regexp.find re i1 i2
    call Hilti::print(found)

    b = b"Hello Bar!"
    i1 = begin b
    i2 = end b
    found = regexp.find re i1 i2
    call Hilti::print(found)

    b = b"Hello Hurz!"
    i1 = begin b
    i2 = end b
    found = regexp.find re i1 i2
    call Hilti::print(found)

    b = b"Hurz Bar Foo!"
    i1 = begin b
    i2 = end b
    found = regexp.find re i1 i2
    call Hilti::print(found)

    b = b"Hello Nobody!"
    i1 = begin b
    i2 = end b
    found = regexp.find re i1 i2
    call Hilti::print(found)
}
