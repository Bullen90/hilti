# @TEST-EXEC:  btest-diff output

module Mini;

export type Main = unit {
    b: bytes &length=15 &chunked -> self.data;

    var data: sink;

    on %init {
        self.data.connect(new Sub);
    }

    on %done {
        print "Done Main", self;
    }
};

export type Sub = unit {
    s: bytes &length=15 &chunked {
        print "s", self.s;
        }
};

