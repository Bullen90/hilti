module Mini;

export type test = unit {
       %export True;

       a: bytes &length=4;
       
       t1: test2(True)
            { print self.t1.b; print self.t1.c; }
            
       t2: test2(False)
            { print self.t2.b; print self.t2.c; }

};

type test2 = unit(b: bool) {
       b: bytes &length=6 &default=b"B-not-set" if ( b );
       c: bytes &length=6 &default=b"C-not-set" if ( ! b );
};
