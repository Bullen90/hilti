module Mini;

export type Main = unit {
    a: bytes &length=2;

    b: bytes &length=5 {
        self.data.write(self.b);
    }

    c: bytes &length=3;

    d: bytes &length=5{
        self.data.write(self.d);
    }

    var data : sink;

    on %init {
        self.data.connect(new Sub(b"Foo", True));
        self.data.connect(new Sub2);
    }

    on %done {
        print "Main", self;
    }
};

export type Sub = unit(a: bytes, b: bool) {
    s1: bytes &length=2;
    s2: bytes &length=8;

    on %done {
        print "Sub ", self, a, b;
    }
};

export type Sub2 = unit {
    s: bytes &eod;

    on %done {
        print "Sub2 ", self;
    }
};

