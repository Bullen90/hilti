module HTTP;

const Token      = /[^ \t\n\r\n]+/;
const URI        = /[^ \t\n\r\n]+/;
const WhiteSpace = /[ \t]+/;
const NewLine    = /[\r\n]+/;
const Version    = /HTTP\/[0-9]\.[0-9]/;

type RequestLine = unit {
    method:  Token;
    :        WhiteSpace;
    uri:     URI;
    :        WhiteSpace;
    version: Version;
    :        NewLine;
    };

type Message = unit {
    msg:     /Message/;
    };
    
type Request = unit {
    %export True;
    
    request: RequestLine;
    message: Message
       { 
       print self.request.method;
       print self.request.uri;
       print self.request.version;
       print self.message.msg;
       }
    };

