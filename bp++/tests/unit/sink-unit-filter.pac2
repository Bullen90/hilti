module Mini;

import BinPAC;

export type Main = unit {
    raw: bytes &eod -> self.data;

    on %init {
        local s: Sub;
        s = new Sub;

        self.data.connect(s);

        # One unit filter, and one sink filter.
        s.add_filter(BinPAC::Filter::BASE64);
        self.data.add_filter(BinPAC::Filter::BASE64);
    }

    var data: sink;
};

export type Sub = unit {
    msg: bytes &eod {
        print self.msg;
        }
};
